@model BrainStorm.Models.BrainStormUser
@{
    ViewData["Title"] = "Edit";
}


<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <div class="container bootstrap snippeQt">
        <div class="row col-sm-12">
            <div class="col-sm-3">
                <div class="form-group pull-right">
                    <img src="~/@Model.AvatarImage" alt="Alternate Text" width="200" height="200" />
                    <input type="file" name="files" width="200" height="200" multiple />
                    <span asp-validation-for="AvatarImage" class="text-danger"></span>
                </div>
                <div>
                    <div class="panel-heading">Website <i class="fa fa-link fa-1x"></i></div>
                    <div class="panel-body"><a href="http://tutorial.az">tutorial.az</a></div>
                </div>

                <ul class="list-group">
                    <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Shares</strong></span> 125</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> 13</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> 37</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78</li>
                </ul>
                <div class="panel panel-default">
                    <div class="panel-heading">Social Media</div>
                    <div class="panel-body">
                        <i class="fa fa-facebook fa-2x"></i>
                        <i class="fa fa-github fa-2x"></i>
                        <i class="fa fa-twitter fa-2x"></i>
                        <i class="fa fa-pinterest fa-2x"></i>
                        <i class="fa fa-google-plus fa-2x"></i>
                    </div>
                </div>
            </div>

            <div class="col-sm-9">
                    <div class="form-group">
                        <label for="first_name"><h4>First name</h4></label>
                        <input asp-for="UserName" placeholder="@Model.UserName">
                    </div>
                    <div class="form-group">
                        <label for="last_name"><h4>Last name</h4></label>
                        <input asp-for="UserName" placeholder="@Model.UserName">
                    </div>

                    <div class="form-group">
                        <label for="phone"><h4>Phone</h4></label>
                        <input asp-for="UserName" placeholder="@Model.PhoneNumber">
                    </div>

                    <div class="form-group">
                        <label for="email"><h4>Email</h4></label>
                        <input asp-for="Email" placeholder="@Model.Email">
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <br>
                            <button>Save</button>
                            <button>Reset</button>
                            <button>Cancel</button>
                        </div>
                    </div>
  
                <hr>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section ScriptsRichTextEditor
    {
    <script>
        $(document).ready(function () {
            var readURL = function (input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('.avatar').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            $(".file-upload").on('change', function () {
                readURL(this);
            });
        });
    </script>
}

