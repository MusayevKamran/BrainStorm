@model BrainStorm.Models.Article

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticleCategory" class="control-label"></label>
                <input asp-for="ArticleCategory" class="form-control" />
                <span asp-validation-for="ArticleCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="~/images/article/default_article.jpg" id="previewImage" alt="Alternate Text" width="200" height="200" />
                <input type="file" id="uploadImage" name="files" width="200" height="200" multiple />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" id="editor"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section ScriptsRichTextEditor
    {

    <script type="text/javascript" src="~/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">CKEDITOR.replace('editor');</script>
    <script type="text/javascript">CKEDITOR.config.skin = 'kama'</script>
    <script type="text/javascript">CKEDITOR.config.language = 'az'</script>
    <script type="text/javascript">CKEDITOR.config.height = '350'</script>
    <script type="text/javascript">CKEDITOR.config.filebrowserImageUploadUrl = "../wwwroot"</script>

    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#previewImage').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#uploadImage").change(function () {
            readURL(this);
        });
    </script>
}